name: CI - Rails Check

on:
  pull_request:
    branches:
      - main

jobs:
  test:
    runs-on: ubuntu-latest

    services:
      mysql:
        image: mysql:8.0
        env:
          MYSQL_ROOT_PASSWORD: 12345678
          MYSQL_USERNAME: root
          MYSQL_PASSWORD: 12345678
        ports:
          - 3306:3306
        options: >-
          --health-cmd="mysqladmin ping --silent"
          --health-interval=10s
          --health-timeout=5s
          --health-retries=5
    env:
      RAILS_ENV: test
      DATABASE_HOST: 127.0.0.1
      DATABASE_PORT: 3306
      DATABASE_USER: root
      DATABASE_PASSWORD: 12345678

    steps:
      - name: 🛎️ Checkout code
        uses: actions/checkout@v4

      - name: 💎 Setup Ruby
        uses: ruby/setup-ruby@v1
        with:
          bundler-cache: true

      - name: 📦 Install dependencies
        run: |
          gem install bundler
          bundle install

      # - name: Test MySQL connection
      #   run: |
      #     sudo apt-get update && sudo apt-get install -y mysql-client
      #     mysql -h 127.0.0.1 -P 3306 -u root -p12345678 -e "SELECT 1;"

      - name: 🛠️ Setup DB
        run: |
          bundle exec rails db:create db:schema:load

      - name: ✅ Run test rspec
        run: |
          bundle exec rspec
