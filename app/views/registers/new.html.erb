<% provide(:title, t("sign_up.title"))%>
<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
          class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <%= form_with(model: @user, url: signup_path) do |f| %>
          <%= render "shared/error_messages", object: f.object %>
          <div class="form-outline mb-4">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-outline mb-4">
            <%= f.label :email, class: "form-label" %>
            <%= f.text_field :email, class: "form-control" %>
          </div>
          <div class="form-outline mb-4">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, class: "form-control" %>
          </div>
          <div class="form-outline mb-4">
            <%= f.label :password_confirmation, class: "form-label" %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
          <p class="mt-3 text-center">Already have an account? <%= link_to t("sign_in_now"), session_path %></p>
          <%= f.submit t("sign_up.title"), class: "btn btn-large btn-primary custom-btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
