<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
          class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <h2>Change your password</h2>
          <%= render "shared/error_messages", object: resource %>
          <%= f.hidden_field :reset_password_token %>
          <div class="field  form-outline mb-4">
            <%= f.label :password, "New password", class: "form-label" %><br />
            <em>(6 characters minimum)</em><br />
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="field  form-outline mb-4">
            <%= f.label :password_confirmation, "Confirm new password", class: "form-label" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="actions">
            <%= f.submit "Change my password", class: "btn btn-large btn-primary custom-btn-primary" %>
          </div>
          <p class="mt-5 text-center">
            <%= link_to t("sign_in.title"), new_registration_path(resource_name) %><br />
            <%= link_to t("sign_up.title"), new_registration_path(resource_name) %><br />
            <%= link_to t("links.confirmation"), new_confirmation_path(resource_name) %><br />
          </p>
        <% end %>
      </div>
    </div>
  </div>
</section>
