<nav class="navbar navbar-expand-lg bg-body-tertiary mb-3">
  <div class="container-fluid">
    <%= link_to t("title.user"), root_path, class:"navbar-brand navbar-brand-text" %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to t("navbar.user.cart"), cart_path, class:"nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <%= "Categories" %>
          </a>
          <ul class="dropdown-menu">
            <% load_categories.each do |category| %>
              <li><%= link_to category.name, products_path(category_id: category.id), class:"nav-link" %></li>
            <% end %>
            <li><%= link_to "All", products_path, class:"nav-link" %></li>
          </ul>
        </li>
        <% if current_user %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= current_user.name %>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("navbar.user.order_history"), orders_path, class:"nav-link" %></li>
              <li><hr class="dropdown-divider"></li>
              <li><%= button_to t("sign_out.title"), destroy_user_session_path, method: "delete", class: "dropdown-item" %></li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to t("sign_in.title"), new_user_session_path, class: "nav-link" %>
          </li>        
        <% end %>
      </ul>
      <%= form_with url: products_path, class: "d-flex", method: :get do |f| %>
        <%= f.text_field :search_term, placeholder: "Search products...", class: "form-control me-2" %>
        <%= f.submit "Search", class: "btn btn-outline-success" %>
      <% end %>
    </div>
  </div>
</nav>
