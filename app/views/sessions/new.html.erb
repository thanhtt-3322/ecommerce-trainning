<% provide(:title, t("sign_in.title")) %>
<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
          class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <%= form_with(url: signin_path) do |f| %>
          <div class="form-outline mb-4">
            <%= f.label :email, class: "form-label" %>
            <%= f.text_field :email, class: "form-control" %>
          </div>
          <div class="form-outline mb-4">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, class: "form-control" %>
          </div>
          <p class="mt-3 text-center">Don't have an account? <%= link_to t("sign_up_now"), signup_path %></p>
          <%= f.submit t("sign_in.title"), class: "mt-3 btn btn-large btn-primary btn-lg btn-block custom-btn-primary " %>
        <% end %>
      </div>
    </div>
  </div>
</section>
