<% provide(:title, t("sign_in.title")) %>
<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
          class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <h2><%= t("sign_in.title") %></h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-outline mb-4">
            <%= f.label :email, class: "form-label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="form-outline mb-4">
            <%= f.label :password, class: "form-label" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="form-outline mb-4">
              <%= f.check_box :remember_me, class: "form-label" %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <div class="actions">
            <%= f.submit "Log in", class: "mt-3 btn btn-large btn-primary btn-lg btn-block custom-btn-primary" %>
          </div>
          <p class="mt-5 text-center">
            <%= link_to t("sign_up.title"), new_registration_path(resource_name) %><br />
            <%= link_to t("links.forgot_password"), new_password_path(resource_name) %><br />
            <%= link_to t("links.confirmation"), new_confirmation_path(resource_name) %><br />
          </p>
        <% end %>
      </div>
    </div>
  </div>
</section>
