<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>List of Users</h2>
    <%= form_with url: admin_users_path, method: :get do |form| %>
      <%= form.select :status, options_for_select(User.statuses.keys, params[:status]), { include_blank: "Select Status" }, class: "form-select", onchange: "this.form.submit();" %>
    <% end %>
  </div>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <%= form_with url: admin_user_path(user), method: :patch, html: { class: 'js-status-form' } do |form| %>
            <div class="form-check form-switch">
              <%= form.check_box :status, { class: 'form-check-input js-form-switch', checked: user.enabled?, onchange: "this.form.submit();" }, "enabled", "disabled" %>
            </div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%== pagy_bootstrap_nav(@pagy) %>
