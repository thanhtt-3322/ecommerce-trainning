<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2><%= t "admin.crud.product.title" %></h2>
    <%= link_to "Create", new_admin_product_path, class: "btn btn-primary" %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Thumbnail</th>
        <th>Price</th>
        <th>Category</th>
        <th class="text-end">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td>
            <%= render "shared/admin/image_display", product: product %>
          </td>
          <td><%= number_to_currency(product.price) %></td>
          <td><%= product.category.name %></td>
          <td class="text-end">
            <%= link_to "Edit", edit_admin_product_path(product), class:"mt-1 mb-1 btn btn-primary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%== pagy_bootstrap_nav(@pagy) %>
</div>
