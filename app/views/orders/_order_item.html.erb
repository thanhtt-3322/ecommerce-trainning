<tr>
  <td><%= link_to item.product.name, product_path(item.product), class: "text-decoration-none text-black" %></td>
  <td class="text-center"><%= render "shared/small_image_display", product: item.product %></td>
  <td><%= number_to_currency(item.price) %></td>
  <td><%= item.quantity %></td>
  <td><%= number_to_currency(item.quantity * item.price) %></td>
</tr>
